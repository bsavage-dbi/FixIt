{
  "name": "Create JIRA Items",
  "version": "1.0",
  "description": "Create JIRA items from a webpage by taking a screenshot!",
  "permissions": ["activeTab", "declarativeContent", "storage", "tabs", "https://yexttest.atlassian.net/"],
  "background": {
    "scripts": ["background.js", "jira.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Take a screen shot!"
  },
  "icons": {
    "16": "images/pages16.png",
    "32": "images/pages32.png",
    "48": "images/pages48.png",
    "128": "images/pages128.png"
  },
  "manifest_version": 2
}
